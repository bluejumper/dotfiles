set smoothscroll
set linkanimations

let scrollstep=80
let scrollduration=400

let barposition = "bottom"
let hintcharacters = "asdfghjkl"

let locale="uk"

" --- Keybindings.

map O :open!<Space>

" Better left-hand navigation.
unmap W a
map W goBack
map S goForward
map E previousTab
map D nextTab

map J nextTab
map K previousTab

" Point to local config.
let homedirectory="/home/blue"
let configpath="~/.config/.cVimrc"
set localconfig
